/*
    จงเขียนโปรแกรมรับค่าจากผู้ใช้เข้าไปใส่ในอาเรย์และแสดงผลลัพธ์ออกมาทั้งหมดที่เป็นจำนวนเฉพาะเท่านั้น (ค่าที่ไม่ใช่จำนวนเฉพาะแสดงเครื่องหมาย # แทน)

    Test case:
        Enter N :
            6
        Enter value[0] :
            19
        Enter value[1] :
            18
        Enter value[2] :
            27
        Enter value[3] :
            15
        Enter value[4] :
            4
        Enter value[5] :
            2
    Output:
        Index:  0  1  2  3  4  5
        Array:  # 19  #  #  #  2
*/

#include<stdio.h>

int main() {
    int N ;
    int i,j ;
    int prime ;

    printf( "Enter N: " ) ;
    scanf( "%d" , &N ) ;

    int array[ N ] ;

    for ( i = 0 ; i < N ; i++ ) {
        printf( "Enter value[%d]: " , i ) ;
        scanf( "%d" , &array[ i ] ) ;
    }
    printf( "--------------------------------------------\n" ) ;
    printf( "Index: " ) ;
    for ( i = 0 ; i < N ; i++ ) {
        printf( "%d " , i ) ;
    }//end for
     printf("\nArray: ") ;
    for ( i = 0 ; i < N ; i++ ) {
        if ( array[i] <= 1 ) {
            printf( "# " ) ; 
            continue ;
        }
        prime = 1 ;
        for ( j = 2 ; j * j <= array[ i ] ; j++ ) {
            if ( array[ i ] % j == 0 ) {
                prime = 0 ;
                break ;
            }
        }
        if ( prime ) {
            printf( "%d " , array[ i ] ) ;
        } else {
            printf( "# " ) ;
        }
    }
    printf("\n--------------------------------------------");

    return 0;
}
