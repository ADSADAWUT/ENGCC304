#include <stdio.h>
int main() {
    if(int bit = 0 ;printf( "bit : " ), scanf( "%d", &bit ), bit % 2 != 0 ) {
        for ( int i = 0 ; i < bit ; i++ ) {
            for ( int j = 0 ; j < bit ; j++ ) {
                if ( j == i )
                    printf( "1" ) ;
                else
                    printf( "0" ) ; }//end if else
            printf( "\n" ) ;
        }//end for
    } else {
        for ( int i = 0 ; i < bit ; i++ ) {
            for ( int j = 0 ; j < bit ; j++ ) {
                if ( j == bit - i - 1 )
                    printf( "1" ) ; 
                else
                    printf( "0" ) ; }//end if else
            printf( "\n" ) ;
        }//end for
    }//end else
    return 0 ;
}//end funtion
