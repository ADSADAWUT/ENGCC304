#include <stdio.h>

int main() {
    int bit = 0 ;  // จำนวนบิต
    printf( "bit : " ) ;
    scanf( "%d", &bit ) ;
    for ( int i = 0 ; i < bit ; i++ ) {
        for ( int j = 0 ; j < bit ; j++ ) {
            if ( j == i )
                printf( "1" ) ;
            else
                printf( "0" ) ;
        }//end if else
        printf( "\n" ) ;
    }//end for
    return 0 ;//end funtion
}
